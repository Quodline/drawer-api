generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  schemas  Schema[]

  @@map("users")
}

model Schema {
  id       Int      @id @default(autoincrement())
  title    String
  userId   Int
  entities Entity[]
  user     User     @relation(fields: [userId], references: [id])

  @@map("schemas")
}

model Entity {
  id                   Int            @id @default(autoincrement())
  title                String
  schemaId             Int
  attributes           Attribute[]
  schema               Schema         @relation(fields: [schemaId], references: [id])
  relationships        Relationship[] @relation("firstEntity")
  inverseRelationships Relationship[] @relation("relatedEntity")

  @@map("entities")
}

model Attribute {
  id       Int      @id @default(autoincrement())
  name     String
  type     DataType
  entityId Int
  entity   Entity   @relation(fields: [entityId], references: [id])

  @@map("attributes")
}

model Relationship {
  id              Int          @id @default(autoincrement())
  type            RelationType
  firstEntityId   Int
  relatedEntityId Int
  firstEntity     Entity       @relation("firstEntity", fields: [firstEntityId], references: [id])
  relatedEntity   Entity       @relation("relatedEntity", fields: [relatedEntityId], references: [id])

  @@map("relationships")
}

enum DataType {
  BOOLEAN
  CHAR
  DATE
  DECIMAL
  GEOMETRY
  INT
  JSON
  VARCHAR
  TEXT
  TIME
  TIMESTAMP
  UUID
  ENUM
}

enum RelationType {
  ONE_TO_ONE
  ONE_TO_MANY
  MANY_TO_ONE
}
